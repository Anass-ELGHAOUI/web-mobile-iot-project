<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_bar"
            style="@style/action_bar_style"
            android:layout_width="match_parent">

            <!-- Btn menu -->
            <ImageButton
                android:id="@+id/btn_close"
                style="@style/actionbar_close_buttons"
                android:tint="@color/white" />

            <TextView
                style="@style/actionbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add Building" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="60dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/building_name"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/et_building_name"
                        style="@style/edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_marginBottom="4dp"
                        android:hint="@string/building_name"
                        android:inputType="text|textCapSentences"
                        android:maxLines="1"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/grey_dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/number_of_floors"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/et_nbr_floors"
                        style="@style/edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_marginBottom="4dp"
                        android:hint="@string/number_of_floors"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLines="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/grey_dark" />


                    <Button
                        android:id="@+id/btn_save_building"
                        style="@style/valide_button_blue"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="25dp"
                        android:text="Valider" />

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>